{
  "name": "delivery-nova-angular",
  "version": "1.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "prod": "lite-server --baseDir=\"dist/delivery-nova-angular\"",
    "test": "ng test",
    "test:ci": "ng test --no-watch --no-progress --browsers=ChromeHeadlessCI || exit 1",
    "install:ci": "npm ci --cache .npm --prefer-offline --ignore-scripts --no-audit --no-progress --legacy-peer-deps",
    "lint": "npm run lint:eslint",
    "lint:fix": "ng lint --fix",
    "lint:eslint": "ng lint",
    "e2e": "ng e2e",
    "change-log": "nodemon deploy/change-log.js 1.1.0",
    "release": "npm run release:minor",
    "release:minor": "npm version minor --no-git-tag-version",
    "release:patch": "npm version patch --no-git-tag-version",
    "release:major": "npm version major --no-git-tag-version",
    "validate-branch": "validate-branch-name",
    "commit-message-validator": "commit-message-validator",
    "prepare": "husky install",
    "i18n:extract": "transloco-keys-manager extract --langs key --default-value \"{{key}}\"",
    "i18n:find": "transloco-keys-manager find"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged --relative"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "npm run lint"
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^15.1.0",
    "@angular/cdk": "^15.1.0",
    "@angular/common": "^15.1.0",
    "@angular/compiler": "^15.1.0",
    "@angular/core": "^15.1.0",
    "@angular/forms": "^15.1.0",
    "@angular/material": "^15.1.0",
    "@angular/material-moment-adapter": "^15.1.0",
    "@angular/platform-browser": "^15.1.0",
    "@angular/platform-browser-dynamic": "^15.1.0",
    "@angular/router": "^15.1.0",
    "@capacitor/android": "^5.5.1",
    "@capacitor/angular": "^2.0.3",
    "@capacitor/core": "^4.6.1",
    "@capacitor/ios": "^5.5.1",
    "@fullcalendar/angular": "4.4.5-beta",
    "@fullcalendar/core": "4.4.2",
    "@fullcalendar/daygrid": "4.4.2",
    "@fullcalendar/interaction": "4.4.2",
    "@fullcalendar/list": "4.4.2",
    "@fullcalendar/moment": "4.4.2",
    "@fullcalendar/rrule": "4.4.2",
    "@fullcalendar/timegrid": "4.4.2",
    "@mapbox/mapbox-gl-geocoder": "^5.0.1",
    "@ngneat/transloco": "^4.2.2",
    "@ngneat/transloco-keys-manager": "^3.5.0",
    "angular-code-input": "^1.6.0",
    "apexcharts": "^3.36.3",
    "crypto-js": "^4.1.1",
    "jwt-decode": "^3.1.2",
    "lodash-es": "^4.17.21",
    "mapbox-gl": "^2.15.0",
    "mat-select-filter": "^2.4.1",
    "material-design-icons": "^3.0.1",
    "moment": "^2.29.4",
    "moment-timezone": "^0.5.40",
    "ng-apexcharts": "^1.7.4",
    "ng-recaptcha": "^9.0.0",
    "ngx-mapbox-gl": "^9.1.0",
    "ngx-material-timepicker": "^5.5.3",
    "ngx-scanner-qrcode": "^1.0.22",
    "ngx-toastr": "^17.0.2",
    "perfect-scrollbar": "^1.5.5",
    "rrule": "^2.7.1",
    "rxjs": "^7.8.0",
    "xng-breadcrumb": "^9.0.0",
    "zone.js": "^0.12.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^15.1.1",
    "@angular-eslint/builder": "^15.2.0",
    "@angular-eslint/eslint-plugin": "^15.2.0",
    "@angular-eslint/eslint-plugin-template": "^15.2.0",
    "@angular-eslint/schematics": "^15.2.0",
    "@angular-eslint/template-parser": "^15.2.0",
    "@angular/cli": "^15.1.1",
    "@angular/compiler-cli": "^15.1.0",
    "@capacitor/cli": "^4.6.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@tailwindcss/typography": "^0.5.9",
    "@types/chroma-js": "^2.1.4",
    "@types/crypto-js": "^4.1.1",
    "@types/jasmine": "3.8.2",
    "@types/lodash": "^4.14.191",
    "@types/lodash-es": "^4.17.6",
    "@types/node": "^18.11.18",
    "@typescript-eslint/eslint-plugin": "^5.48.2",
    "@typescript-eslint/parser": "^5.48.2",
    "autoprefixer": "^10.4.13",
    "chroma-js": "^2.4.2",
    "codelyzer": "^6.0.2",
    "commit-message-validator": "^1.0.2",
    "eslint": "^8.32.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-jsdoc": "^39.6.4",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^4.2.1",
    "git-tags": "^0.2.4",
    "husky": "^8.0.3",
    "jasmine-core": "~4.5.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.19",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.0.3",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^13.1.0",
    "lite-server": "^2.6.1",
    "lodash": "^4.17.21",
    "postcss": "^8.4.21",
    "prettier": "^2.8.3",
    "protractor": "~7.0.0",
    "systemjs-plugin-json": "^0.3.0",
    "tailwindcss": "^3.2.7",
    "ts-node": "~10.9.1",
    "typescript": "4.9.4",
    "validate-branch-name": "^1.3.0"
  },
  "config": {
    "commit-message-validator": {
      "pattern": "^((Revert \")?\\[(FEATURE|BUGFIX|DOCS|STYLE|REFACTO|TEST|QUALITY|CHORE|RELEASE)\\](\\[((DPA)-\\d+|CI SKIP)\\])? [A-Z]|Merge ((remote-tracking )?branch|commit) ).*",
      "errorMessage": "Commit not good: please see https://tic-nova.atlassian.net/wiki/spaces/MML/pages/263061508/Workflow+Git+Flow"
    }
  }
}
